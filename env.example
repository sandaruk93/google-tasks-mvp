# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
REDIRECT_URI=http://localhost:3000/oauth2callback

# Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Security Configuration
SESSION_SECRET=your_super_secret_session_key_change_in_production
JWT_SECRET=your_jwt_secret_key_change_in_production
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Environment Configuration
NODE_ENV=development
PORT=3000

# Security Headers and CORS
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
CORS_CREDENTIALS=true

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5
UPLOAD_RATE_LIMIT_MAX_REQUESTS=10
TASK_RATE_LIMIT_MAX_REQUESTS=50

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=application/pdf
UPLOAD_TEMP_DIR=./uploads/temp

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=5242880
LOG_MAX_FILES=5

# Database Configuration (if using external database)
# DATABASE_URL=your_database_connection_string

# Redis Configuration (for session storage and caching)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your_redis_password

# Monitoring and Analytics
# SENTRY_DSN=your_sentry_dsn_here
# LOGROCKET_APP_ID=your_logrocket_app_id

# API Keys for External Services
# VIRUSTOTAL_API_KEY=your_virustotal_api_key_here
# CLOUD_STORAGE_BUCKET=your_cloud_storage_bucket_name

# SSL/TLS Configuration (for production)
# SSL_KEY_PATH=/path/to/ssl/private.key
# SSL_CERT_PATH=/path/to/ssl/certificate.crt

# Backup and Recovery
# BACKUP_ENABLED=true
# BACKUP_SCHEDULE=0 2 * * *
# BACKUP_RETENTION_DAYS=30

# Performance Configuration
# CLUSTER_MODE=true
# WORKER_PROCESSES=4
# MEMORY_LIMIT=512MB

# Development Configuration
DEBUG=false
ENABLE_DEBUG_LOGGING=false
SHOW_ERROR_DETAILS=false 